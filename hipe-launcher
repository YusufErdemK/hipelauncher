        "no_results": "Sonuç bulunamadı",
    },
    "en": {
        "title": "Hipe",
        "search": "Search applications...",
        "settings": "Settings",
        "theme": "Theme",
        "light": "Light",
        "dark": "Dark",
        "language": "Language",
        "launch_speed": "Launch Mode",
        "normal": "Normal",
