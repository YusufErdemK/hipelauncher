#!/usr/bin/env python3
"""
Hipe Launcher — Yeniden Tasarlanmış
Temiz, tutarlı, modern bir uygulama başlatıcı.
"""

import gi
import os
import subprocess
import configparser
import json

gi.require_version("Gtk", "3.0")
from gi.repository import Gtk, Gdk, GdkPixbuf, GLib, Pango

APP_DIRS = [
    "/usr/share/applications",
    os.path.expanduser("~/.local/share/applications"),
]

SELF_PATH = os.path.abspath(__file__)
CONFIG_FILE = os.path.expanduser("~/.config/hipe-launcher/settings.json")

TRANSLATIONS = {
    "tr": {
        "title": "Hipe",
        "search": "Uygulama ara...",
        "settings": "Ayarlar",
        "theme": "Tema",
        "light": "Açık",
        "dark": "Koyu",
        "language": "Dil",
        "launch_speed": "Başlatma Modu",
        "normal": "Normal",
        "normal_desc": "Standart başlatma",
        "power": "Güç",
        "power_desc": "Arka planda çalıştır",
        "ultra": "Ultra",
        "ultra_desc": "Öncelikli başlat",
        "close": "Tamam",
